<div class="bg-white rounded-lg shadow-xl border-t border-white max-w-xl flex flex-col">
  <div class="w-full flex flex-col px-4 pt-8 border-b border-gray-300 bg-gray-100 rounded-t-lg">
    <h2 class="font-bold text-2xl w-full text-center">Create an account</h2>
    <h3 class="leading-tight text-center text-gray-600 font-light mb-5">Join the premier Animal Crossing trading site.</h3>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'w-full flex flex-col px-4 bg-white pt-2 rounded-b-lg'}, remote: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field w-full my-1 flex flex-col">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'janedoe@example.com', class: 'w-full textbox' %>
    </div>

    <div class="flex flex-row space-x-4 mt-2">
      <div class="field w-1/2  my-1 flex flex-col">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Your strong password', class: 'w-full textbox' %>
      </div>

      <div class="field w-1/2 my-1 flex flex-col">
        <%= f.label :password_confirmation, "Confirm Password", class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Your password (again)', class: 'w-full textbox' %>
      </div>
    </div>
    <% if @minimum_password_length %>
      <em class="hint-text">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

    <div class="actions mt-2 w-full mb-4">
      <%= f.submit "Join Nook City", class: 'w-full button success' %>
    </div>

  <% end %>

</div>
<div class="mt-3 max-w-xl">
  <%= render "devise/shared/links" %>
</div>
